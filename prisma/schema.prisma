datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Homeowner {
  id            Int            @id @default(autoincrement())
  name          String
  email         String         @unique
  password      String
  energyTariff  Float
  homes         Home[]
  meterReadings MeterReading[]
}

model Home {
  id           Int       @id @default(autoincrement())
  name         String
  address      String
  instructions String?
  homeowner    Homeowner @relation(fields: [homeownerId], references: [id])
  homeownerId  Int
  stays        Stay[]
  Agency       Agency?   @relation(fields: [agencyId], references: [id])
  agencyId     Int?
}

model Agency {
  id           Int    @id @default(autoincrement())
  name         String
  email        String @unique
  password     String
  energyTariff Float
  homes        Home[]
}

model Visitor {
  id           Int            @id @default(autoincrement())
  name         String
  email        String         @unique
  password     String
  stays        Stay[]
  MeterReading MeterReading[]
}

model Stay {
  id            Int            @id @default(autoincrement())
  startDate     DateTime
  endDate       DateTime
  home          Home           @relation(fields: [homeId], references: [id])
  homeId        Int
  visitor       Visitor?       @relation(fields: [visitorId], references: [id])
  visitorId     Int?
  meterReadings MeterReading[]
}

model MeterReading {
  id          Int        @id @default(autoincrement())
  date        DateTime
  reading     Int
  image       String
  homeowner   Homeowner? @relation(fields: [homeownerId], references: [id])
  homeownerId Int?
  visitor     Visitor?   @relation(fields: [visitorId], references: [id])
  visitorId   Int?
  stay        Stay?      @relation(fields: [stayId], references: [id])
  stayId      Int?
}
